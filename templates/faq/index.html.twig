{% extends 'base.html.twig' %}

{% block title %}Foire aux questions{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{asset('css/faq.css')}}">
{% endblock %}

{% block body %}
<section id="faq">
    <div class="container">
        <div class="row">
            <div class="col-lg">
                <h2 class="text-center mb-5">Questions fréquentes</h2>
                <div class="accordion" id="accordionExample">
