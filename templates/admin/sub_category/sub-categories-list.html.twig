{% extends 'base-admin.html.twig' %}

{% block title %}Gestion des sous-catégories{% endblock %}

{% block body %}
<div class="container">
    <h2 class="text-center">Gestion des sous-catégories</h2>
    <div class="row">
        <div class="col-lg m-4">
          <span><a href="{{ path('add_sub-category') }}">+ Ajouter une sous-catégorie</a></span>
            <table class="table">
                <thead style="background-color: #2C3E4E; color: white;">
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom sous-catégorie</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                    {% for subCategory in subCategories %}
                  <tr>
                    <th scope="row">{{ subCategory.id }}</th>
                    <td>{{ subCategory.name }}</td>
                    <td>{{ subCategory.category.name }}</td>
                    <td><a class="btn btn-primary" href="{{ path('update_sub-category', {id: subCategory.id}) }}" title="modifier"><i class="fas fa-edit"></i></a></td>
                    <td><a class="btn btn-danger" href="{{ path('delete_sub-category', {id: subCategory.id}) }}" title="supprimer"><i class="fas fa-trash-alt"></i></a></td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
        </div>
    </div>
</div>
{% endblock %}
